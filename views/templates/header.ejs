<body>
    <header class="header">
        <!-- Header content here -->
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid  flex-nav">
                <div class="first">
                    <a class="navbar-brand" href="/"><img class="logo" src="/src/logo-no-background.png"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="second">
                    <div class="input-group">
                        <div class="form-outline" data-mdb-input-init>
                            <input type="search" id="form1" class="form-control" placeholder="Search" />
                        </div>
                        <button type="button" id="search-button" class="btn btn-primary" data-mdb-ripple-init>
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="third">
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/items">Buy</a>
                        </li>
                        <% if(user){%>
                            <li class="nav-item">
                                <a class="nav-link" href="/items/new">New</a>
                            </li>
                        <%}%>
                        <% if(!user){%>
                            <li class="nav-item">
                                <a class="nav-link" href="/users/new">Sign Up</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/users/login">Login</a>
                            </li>
                        <%}else{%>
                            <li class="nav-item">
                                <a class="nav-link" href="/users/profile">Profile</a>
                            <li class="nav-item">
                                <a class="nav-link" href="/users/logout">Logout</a>
                            </li>
                        <%}%>
                        </ul>
                    </div>
                </div>
            </div>
          </nav>
          <div class="error-container">
            <% if(errorMessages.length > 0) {%>
                <% errorMessages.forEach(message=>{%>
                    <div class='error'>
                        <%=message%>
                    </div>
                <%});%>
            <%}%>
            
            <% if(successMessages.length > 0) {%>
                <% successMessages.forEach(message=>{%>
                    <div class='success'>
                        <%=message%>
                    </div>
                <%});%>
            <%}%>
            </div>
    </header>
    <aside class="spacer left"></aside>